<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>MyFirstServlet</servlet-name>
    <servlet-class>cn.com.leadar.MyFirstServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetPictureServlet</servlet-name>
    <servlet-class>cn.com.leadar.GetPictureServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>CreatePictureServlet</servlet-name>
    <servlet-class>cn.com.leadar.CreatePictureServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>MyFirstServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>GetPictureServlet</servlet-name>
    <url-pattern>/GetPictureServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  
    <servlet-name>CreatePictureServlet</servlet-name>
    <url-pattern>/CreatePictureServlet</url-pattern>
  </servlet-mapping>

</web-app>